@model Product
@{
    ViewData["Title"] = "Details";
    var FolderPath = "~/Images/";
}

<h1>Details</h1>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductSize)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedDateTime)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductColor)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ProductColor)
            {
                @Html.DisplayFor(p => item.Color.ColorName);
                <br />

            }
        </dd>



        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>

        <dd class="col-sm-10">
            @foreach (var item in Model.ProductImage)
            {
                var photoPath = FolderPath + item.FileName;
                <div class="form-group row col-sm-4 offset-4">
                    <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
                </div>
            }

        </dd>
    </dl>
</div>

