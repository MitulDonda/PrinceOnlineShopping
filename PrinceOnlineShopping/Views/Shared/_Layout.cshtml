    @RenderSection("Scripts", required: false)
    <script>
        $(".slicknav_menutxt").html("");

        function myFunction(url) {
            window.location.href = url;
        }
        $(".navbar-toggler").click(function () {
                $('#navbarCollapse1').fadeToggle("slow");
           
        });
        $("#MobCollectionlink").click(function () {
            $('#mobColletionList').fadeToggle();
            $("i", this).toggleClass("fa-arrow-down fa-arrow-right");
        });
        $("#MobUserlink").click(function () {
            $('#mobUserList').fadeToggle();
            $("i", this).toggleClass("fa-arrow-down fa-arrow-right");
        });
    </script>
    <script src="~/js/Custom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.5.0/velocity.min.js"></script>
    <script src="~/js/index.js"></script>
   
</body>
</html>
