@model PaymentGatewayResponse
<h1 align="center">Payment Status</h1>
<div class="container">
    <h4 class="text-danger">Your Online payment is failed. If your payment is deducted from bank it will refund you with in 3-4 working days.</h4>
    <br />
    <h4 class="text-success">So, Your order is treated as Cash on delivery. Our Expert will connect you in sometime</h4>
    <br />
    <h4 class="text-success">Thank you for shopping</h4>
    <br />
    <div class="panel panel-danger">
        <div class="panel-heading" style="color:red">@ViewData["heading"]</div>
        <div class="panel-body">
            <!-- <div class="container"> -->
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>Order ID</td>
                        <td>@Model.Order.OrderId</td>
                    </tr>
                    <tr>
                        <td>Order Amount</td>
                        <td>@Model.orderAmount</td>
                    </tr>
                    <tr>
                        <td>Reference ID</td>
                        <td>@Model.referenceId</td>
                    </tr>
                    <tr>
                        <td>Transaction Status</td>
                        <td>@Model.txMsg</td>
                    </tr>
                    <tr>
                        <td>Payment Mode </td>
                        <td>@Model.paymentMode</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>@Model.txMsg</td>
                    </tr>
                    <tr>
                        <td>Transaction Time</td>
                        <td>@Model.txTime</td>
                    </tr>
                </tbody>
            </table>
            <!-- </div> -->

        </div>
    </div>
</div>