@model PaymentGatewayResponse
<h1 align="center">PG Response</h1>
<div class="container">
    <div class="@ViewData["panel"]">
        <div class="panel-heading">@ViewData["heading"]</div>
        <div class="panel-body">
            <!-- <div class="container"> -->
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>Order ID</td>
                        <td>@Model.Order.OrderId</td>
                    </tr>
                    <tr>
                        <td>Order Amount</td>
                        <td>@Model.orderAmount</td>
                    </tr>
                    <tr>
                        <td>Reference ID</td>
                        <td>@Model.referenceId</td>
                    </tr>
                    <tr>
                        <td>Transaction Status</td>
                        <td>@Model.txMsg</td>
                    </tr>
                    <tr>
                        <td>Payment Mode </td>
                        <td>@Model.paymentMode</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>@Model.txMsg</td>
                    </tr>
                    <tr>
                        <td>Transaction Time</td>
                        <td>@Model.txTime</td>
                    </tr>
                </tbody>
            </table>
            <!-- </div> -->

        </div>
    </div>
</div>